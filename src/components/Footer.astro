---
import type { Locale } from '@lib/i18n'
import itTranslations from '@lib/i18n/translations/it.json'
import enTranslations from '@lib/i18n/translations/en.json'

export interface Props {
  locale: Locale
}

const { locale } = Astro.props
const translations = locale === 'it' ? itTranslations : enTranslations
const currentYear = new Date().getFullYear()
---

<footer class="bg-acacia-primary text-white py-16">
  <div class="container-acacia">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo & Info -->
      <div class="md:col-span-2">
        <h3 class="text-2xl font-light tracking-wider mb-4" style="font-family: var(--font-family-display);">
          ACACIA FIRENZE
        </h3>
        <p class="text-sm text-gray-300 leading-relaxed">
          {locale === 'it' 
            ? 'Alloggi di charme nel cuore di Firenze. Vivi un\'esperienza autentica nella citt√† del Rinascimento.'
            : 'Charming accommodations in the heart of Florence. Live an authentic experience in the Renaissance city.'}
        </p>
      </div>
      
      <!-- Links -->
      <div>
        <h4 class="text-sm uppercase tracking-wider mb-4 font-semibold">
          {locale === 'it' ? 'Informazioni' : 'Information'}
        </h4>
        <ul class="space-y-2">
          <li>
            <a href={`/${locale}/about`} class="text-sm text-gray-300 hover:text-white transition-colors">
              {locale === 'it' ? 'Chi siamo' : 'About us'}
            </a>
          </li>
          <li>
            <a href={`/${locale}/contact`} class="text-sm text-gray-300 hover:text-white transition-colors">
              {translations.common.contact}
            </a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-white transition-colors">
              {translations.footer.privacy}
            </a>
          </li>
          <li>
            <a href="#" class="text-sm text-gray-300 hover:text-white transition-colors">
              {translations.footer.terms}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Social -->
      <div>
        <h4 class="text-sm uppercase tracking-wider mb-4 font-semibold">
          {translations.footer.followUs}
        </h4>
        <div class="flex space-x-4">
          <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Facebook" 
             class="text-gray-300 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
          </a>
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" aria-label="Instagram"
             class="text-gray-300 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-700 mt-12 pt-8 text-center">
      <p class="text-sm text-gray-300">
        &copy; {currentYear} Acacia Firenze - {translations.footer.rights}
      </p>
    </div>
  </div>
</footer>