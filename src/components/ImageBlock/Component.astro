---
import { ResponsiveImage } from '@components/ResponsiveImage';
import type { ImageBlockFragment } from './fragments';

interface Props {
  block: ImageBlockFragment;
}

const { block } = Astro.props;
---

<figure>
  {/* Display responsive image */}
  <ResponsiveImage data={block.asset.responsiveImage} />
  {/* Display image title */}
  <figcaption>{block.asset.title}</figcaption>
</figure>
